{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "lib": ["es5", "es6", "dom"],
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,      
      "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
  }